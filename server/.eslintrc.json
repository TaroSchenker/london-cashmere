{
    "parser": "@typescript-eslint/parser",
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "prettier",
        "plugin:prettier/recommended"
      ],
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module",
      "project": "**/tsconfig.json"
    },
    "rules": {
      // Add any custom rules or override existing ones here
      "prettier/prettier": "error"
    },
    "settings": {
      "import/resolver": {
        "typescript": {}
      }
    }
  }
  